<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="224dp"

        android:layout_margin="6dp"
        android:elevation="3dp"
        app:cardBackgroundColor="?attr/colorButtonNormal"
        app:cardCornerRadius="@dimen/card_album_radius"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/buy_book_image"
                android:layout_width="137dp"
                android:layout_height="196dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/buy_book_title"
                android:layout_width="224dp"
                android:layout_height="60dp"
                android:layout_marginEnd="36dp"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/buy_book_price"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/buy_book_price"
                android:layout_width="260dp"
                android:layout_height="44dp"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/buy_book_seller"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/buy_book_seller"
                android:layout_width="260dp"
                android:layout_height="44dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/buy_book_email"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/buy_book_email"
                android:layout_width="226dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:autoLink="email"
                android:clickable="true"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buy_book_email"
                app:srcCompat="@drawable/baseline_email_black_18dp" />

            <ImageView
                android:id="@+id/pop_up_dots"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@+id/buy_book_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/baseline_more_vert_black_18dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>